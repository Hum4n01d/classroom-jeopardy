.title
    margin-bottom 3px

.scores
    display none
    position absolute
    top 10px
    right 10px

.links
    margin 10px 0

    a
        margin-right 5px

.whos-turn
    visibility hidden
    position absolute
    display flex
    justify-content center
    width 100%
    align-items center
    font-size 1.5em

.game-flash
    position fixed
    left 0
    top 0
    height 100vh
    width 100vw

    display none
    justify-content center
    align-items center

    &.show
        display flex

        &.show-timer
            height 100vh

    .game-flash-text
        font-size 3em
        opacity 0
        z-index 10000

        &.correct
            color #51ff51

        &.incorrect
            color #ec0e0e

        &.no-answer
            color #fff

.board-wrap
    position relative

    .board-blanket
        position absolute
        z-index 10
        display flex
        justify-content center
        align-items center
        top 0
        left 0
        width 100%
        height 100%
        background-color rgba(100, 100, 100, 0.85)
        -webkit-backdrop-filter blur(3px)

        button
            height 40px

    .board
        display flex
        border 1px solid #999

        .category
            margin 0
            width 20%
            padding 0
            border-right 1px solid #999

            .answer
                display none

            &:last-child
                border none

            .category-title
                background-color #eee
                width 100%
                margin 0

            .board-question
                cursor pointer

                &.disabled
                    background-color #eee
                    cursor auto

                .question-text
                    display none

            .board-question,
            .category-title
                display flex
                justify-content center
                align-items center
                border-bottom 1px solid #999
                margin 0
                padding 40px 10px
                list-style none

                > p
                    margin 0

                &:last-child
                    border none

.create-board
    button[type="submit"]
        margin 10px 0

    .title-bar
        display flex
        justify-content space-between

        button.clear-board
            height 40px

        button a
            text-decoration none

    .board
        input
            border 0

        .category > .board-question
            padding 0
            display flex
            flex-direction column

            input
                width 100%
                padding 15px