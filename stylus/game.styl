.board
    display flex
    border 1px solid #999

    .category
        margin 0
        width 20%
        padding 0
        border-right 1px solid #999

        &:last-child
            border none

        .category-title
            background-color #eee

        .question
            cursor pointer

            .question-text
                display none

        .question,
        .category-title
            display flex
            justify-content center
            align-items center
            border-bottom 1px solid #999
            margin 0
            padding 30px 10px
            list-style none

            > p
                margin 0

            &:last-child
                border none


.modal-blanket
    display none
    background-color #eee
    position fixed
    width 0
    height 0
    bottom 50%
    right 50%
    opacity 0.5
    transition 1s

    &.in
        opacity 1
        width 100vw
        height 100vh
        bottom 0
        right 0

.modal
    display none
    position absolute
    top 45vh
    left 45vw

    width 10vw
    height 10vw
    top 25%
    left 25%

    transition 1s
    opacity 0

    &.in
        opacity 1
        top 0
        left 0

    .modal-question
        padding 50px
        width 100vw

        .question-category
            color #888

    .timer
        display none
        text-align center
        position relative

        width 50vw
        height 200px
        margin 200px 25vw

        > p
            margin 0

            &:first-child
                margin-bottom 125px

        .timer-text
            position absolute
            top 10px
            left 10%
            right 10%
            width 80%
            font-size 6em
            opacity 0.5
            margin 10px 0
